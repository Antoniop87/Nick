<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#1F8BDE"
    tools:context=".activities.jogos.SomaActivity">

    <ImageView
        android:id="@+id/btn_fechar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_highlight_off_24"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vamos somar!"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/matematica"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual a soma de 2 + 3?"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="7"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@animator/btn_animator"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="5"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textSize="26sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        />

</LinearLayout>